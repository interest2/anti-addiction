<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="start"
        android:rotationX="0"
        android:text="单次解禁时长"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_strict_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="严格模式"
            android:textSize="12sp"
            android:padding="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_casual_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="宽松模式"
            android:textSize="12sp"
            android:padding="8dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <!-- 宽松模式一天次数设置 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="宽松模式一天次数设置"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- 宽松模式次数显示和编辑区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

                 <!-- 正常文本显示 -->
         <LinearLayout
             android:id="@+id/layout_casual_count_display"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="start"
             android:orientation="horizontal"
             android:gravity="center_vertical"
             android:padding="8dp"
             android:background="@android:drawable/edit_text">

             <TextView
                 android:id="@+id/tv_casual_count_display"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:layout_marginEnd="8dp"
                 android:text="1"
                 android:textSize="14sp"
                 android:textColor="#333333" />

             <ImageView
                 android:id="@+id/iv_edit_casual_count"
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:src="@android:drawable/ic_menu_edit"
                 android:background="?android:attr/selectableItemBackgroundBorderless"
                 android:padding="2dp"
                 android:contentDescription="编辑" />

         </LinearLayout>

        <!-- 输入框和保存按钮（默认隐藏） -->
        <LinearLayout
            android:id="@+id/layout_casual_count_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_casual_limit_count"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:hint="输入1~3的数字"
                android:inputType="number"
                android:maxLength="1"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@android:drawable/edit_text"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/iv_save_casual_count"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:text="✅"
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:contentDescription="保存" />

        </LinearLayout>

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <!-- 屏蔽关键词设置 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="屏蔽关键词设置"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- 屏蔽关键词显示和编辑区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

                 <!-- 正常文本显示 -->
         <LinearLayout
             android:id="@+id/layout_target_word_display"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="start"
             android:orientation="horizontal"
             android:gravity="center_vertical"
             android:padding="8dp"
             android:background="@android:drawable/edit_text">

             <TextView
                 android:id="@+id/tv_target_word_display"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:layout_marginEnd="8dp"
                 android:text="关键词"
                 android:textSize="14sp"
                 android:textColor="#333333"
                 android:ellipsize="end"
                 android:maxLines="2" />

             <ImageView
                 android:id="@+id/iv_edit_target_word"
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:src="@android:drawable/ic_menu_edit"
                 android:background="?android:attr/selectableItemBackgroundBorderless"
                 android:padding="2dp"
                 android:contentDescription="编辑" />

         </LinearLayout>

        <!-- 输入框和保存按钮（默认隐藏） -->
        <LinearLayout
            android:id="@+id/layout_target_word_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_target_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="若多个关键词需空格分隔"
                android:inputType="text"
                android:maxLength="50"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@android:drawable/edit_text"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/iv_save_target_word"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:text="✅"
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:contentDescription="保存" />

        </LinearLayout>

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <!-- 更换悬浮窗警示文字来源 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="悬浮窗警示文字"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_change_floating_text_source"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="更换来源"
        android:textSize="14sp"
        android:padding="12dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

</LinearLayout> 