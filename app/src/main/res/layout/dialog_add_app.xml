<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加新APP"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="少部分APP添加后未必成功，取决于目标APP是否支持文本检测。当然也可不检测关键词，直接全局屏蔽，这有待后续版本优化"
        android:textSize="14sp"
        android:textColor="#999999"
        android:gravity="start"
        android:layout_marginBottom="24dp" />

    <!-- APP名称 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APP名称"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="请输入APP名称"
        app:hintTextColor="#757575"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="14sp"
            android:padding="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 包名 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="包名"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="是英文形式，可上网搜XX APP的包名"
        app:hintTextColor="#757575"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_package_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="14sp"
            android:padding="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 屏蔽关键词 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="屏蔽关键词（若输入多个则空格分隔）"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="常见的有：推荐、发现、热榜"
        app:hintTextColor="#757575"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_target_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="14sp"
            android:padding="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 宽松模式次数 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="宽松模式次数"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="默认值为1，可自定义"
        app:hintTextColor="#757575"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_relaxed_limit_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:text="1"
            android:textSize="14sp"
            android:padding="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout> 