<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF8EB"
    android:clickable="true"
    android:focusable="true">

    <!-- 顶部信息区域 -->
    <LinearLayout
        android:id="@+id/top_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/floating_window_bg"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防沉迷提醒"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="小红书应用正在运行"
            android:textColor="#EEEEEE"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- 数学题验证区域 -->
    <LinearLayout
        android:id="@+id/math_challenge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_info_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FF333333"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_math_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 + 5 = ?"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/et_math_answer"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_marginRight="12dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="答案"
                android:inputType="numberSigned"
                android:imeOptions="actionDone"
                android:maxLength="8"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_submit_answer"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btn_cancel_close"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:text="取消"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_math_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="#FFFF5722"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 日常提醒区域 -->
    <LinearLayout
        android:id="@+id/daily_reminder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/math_challenge_layout"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FCF8EB"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_daily_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩手机？不如去喝水"
            android:textColor="#399C3F"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start" />

        <TextView
            android:id="@+id/tv_daily_reminder_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿色文字的设置路径：个性设置->悬浮窗…提醒"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- 关闭按钮 - 右上角 -->
    <Button
        android:id="@+id/btn_close"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:text="关闭"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:backgroundTint="#FF6B6B"
        android:gravity="center" />

</RelativeLayout>