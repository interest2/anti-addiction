<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 版本更新区域 -->
        <TextView
            android:id="@+id/tv_version_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_version_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前已是最新版本"
            android:textSize="16sp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tv_version_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本机当前1.0.0，云端最新1.0.1"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_latest_apk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最新安装包地址"
            android:backgroundTint="#7C4DFF"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />


        <!-- 悬浮窗设置标题 -->
        <TextView
            android:id="@+id/tv_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬浮窗设置"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 悬浮窗设置按钮 -->
        <Button
            android:id="@+id/btn_floating_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调整悬浮窗边缘位置"
            android:backgroundTint="#FFA000"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="32dp" />

        <!-- 其它说明 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="若悬浮窗到时间未显示，可尝试点击下面的按钮"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- 重置按钮 -->
        <Button
            android:id="@+id/btn_reset_floating_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重置所有APP悬浮窗状态"
            android:backgroundTint="#E91E63"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView> 