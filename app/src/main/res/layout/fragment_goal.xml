<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_goal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="个性化设置"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、目标设置"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_tag_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="目标设置" />

        <Button
            android:id="@+id/btn_target_date_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:text="目标日期"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_goal_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离目标：--天"
            android:textSize="18sp"
            android:textColor="#E91E63"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- 算术题修改难度设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2、算术题修改难度"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_math_difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="设置难度"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- 悬浮窗额外显示日常提醒设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3、悬浮窗-良好习惯提醒"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_floating_daily_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#9C27B0"
            android:text="设置良好习惯提醒"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>